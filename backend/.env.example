# Server Configuration
NODE_ENV=development
PORT=1067
HOST=localhost

# Database
DATABASE_URL=postgresql://ovistra:password@localhost:5432/ovistra_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS
CORS_ORIGIN=http://localhost:3006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# === 2025 최신 AI 서비스 API 키들 ===

# OpenAI (GPT-4.5, GPT-4.1, GPT-5)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4.5-turbo
OPENAI_ORGANIZATION=org-your-organization-id

# Anthropic (Claude 4 시리즈)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-4-sonnet

# Google (Gemini 2.5, Veo 3)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_PROJECT_ID=your-google-project-id
GEMINI_MODEL=gemini-2.5-pro

# xAI (Grok 3)
XAI_API_KEY=your-xai-api-key
GROK_MODEL=grok-3

# Microsoft (Phi-4 Multimodal)
MICROSOFT_API_KEY=your-microsoft-api-key
AZURE_ENDPOINT=https://your-resource.openai.azure.com/

# Meta (Llama 4) - Open Source
HUGGINGFACE_API_KEY=hf_your-huggingface-token
LLAMA_MODEL=meta-llama/Llama-4-7b-chat-hf

# === 비디오 생성 서비스 ===

# Runway ML (Gen-4)
RUNWAY_API_KEY=your-runway-api-key
RUNWAY_MODEL=gen-4

# Pika Labs 2.0
PIKA_API_KEY=your-pika-api-key
PIKA_DISCORD_TOKEN=your-pika-discord-token

# Stability AI (Stable Video Diffusion 2.0)
STABILITY_API_KEY=sk-your-stability-api-key
STABLE_VIDEO_MODEL=stable-video-diffusion-2.0

# === 오디오/음성 서비스 ===

# ElevenLabs (Voice 3.0)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-default-voice-id

# Murf AI
MURF_API_KEY=your-murf-api-key

# === 이미지 생성 서비스 ===

# Midjourney
MIDJOURNEY_API_KEY=your-midjourney-api-key
MIDJOURNEY_DISCORD_TOKEN=your-midjourney-discord-token

# DALL-E 4 (OpenAI)
DALLE_MODEL=dall-e-4

# === 특화 서비스 ===

# NVIDIA (Describe Anything 3B)
NVIDIA_API_KEY=your-nvidia-api-key
NVIDIA_NGC_API_KEY=your-ngc-api-key

# Adobe Creative Cloud
ADOBE_CLIENT_ID=your-adobe-client-id
ADOBE_CLIENT_SECRET=your-adobe-client-secret
ADOBE_REDIRECT_URI=http://localhost:1067/auth/adobe/callback
ADOBE_STOCK_API_KEY=your-adobe-stock-api-key

# === 한국 AI 서비스 ===

# NAVER (HyperCLOVA X)
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
HYPERCLOVA_API_KEY=your-hyperclova-api-key

# Kakao (KoGPT, Karlo)
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_ADMIN_KEY=your-kakao-admin-key
KARLO_API_KEY=your-karlo-api-key

# Upstage (Solar LLM)
UPSTAGE_API_KEY=your-upstage-api-key
SOLAR_MODEL=solar-1-mini-chat

# LG AI Research (EXAONE)
EXAONE_API_KEY=your-exaone-api-key

# === API 비용 관리 ===
MAX_MONTHLY_COST_USD=1000
COST_ALERT_THRESHOLD=800
API_USAGE_TRACKING=true

# File Upload
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads

# FFmpeg
FFMPEG_PATH=/usr/local/bin/ffmpeg
FFPROBE_PATH=/usr/local/bin/ffprobe

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Adobe CEP Communication
CEP_SOCKET_PORT=3200